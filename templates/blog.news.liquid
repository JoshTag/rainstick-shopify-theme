<div class="module-wrapper">
  <div class="module blog">
    <form class="blog-search" action="/search" method="get" role="search">
      <input type="hidden" name="type" value="article" />
      <div class="blog-search__bar">
        <input type="search" name="q" value="{{ search.terms | escape }}" placeholder="search" aria-label="search">
        <button type="submit" >
          <span >{% include 'search' %}</span>
        </button>
      </div>
    </form>
    {% comment %}
    <div class="module-header blog-header" style="padding: 50px 0 0">
      <div class="module-title blog-title">
        <h1>
            {{ "blogs.blog.title" | t: title:blog.title }}
        </h1>
      </div>
    </div>
    {% endcomment %}
    <div class="module-body press">
      <div class="blog-tags-wrapper">
        <div class="blog-tags-list">
          <span id="latest-news-trigger" class="press-blog__triggers active">Latest News</span>
          <span id="press-kit-trigger" class="press-blog__triggers">Press Kit</span>
        </div>
      </div>

      <div id="latest-news-section" class="post-wrapper blogs">
        {% for article in blog.articles %}
          {% include 'article-card' %}
        {% endfor %}
      </div>

      <div id="press-kit-section" class=""  style="display: none;">
        {% section 'press-kit' %}
      </div>
    </div>
  </div>
</div>

<script>
window.onload = function() {
  let triggers = function(current, prev) {
    current.style.display = "block";
    prev.style.display = "none";
  }

  let newsTrigger = document.getElementById('latest-news-trigger');
  let newsSection = document.getElementById('latest-news-section');
  let pressTrigger = document.getElementById('press-kit-trigger');
  let pressSection = document.getElementById('press-kit-section');

  newsTrigger.addEventListener('click', function(){
    this.classList.add("active");
    pressTrigger.classList.remove("active");
    newsSection.style.display = "grid";
    pressSection.style.display = "none";
  })

  pressTrigger.addEventListener('click', function(){
    this.classList.add("active");
    newsTrigger.classList.remove("active");
    newsSection.style.display = "none";
    pressSection.style.display = "block";
  })


}
</script>