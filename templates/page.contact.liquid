<style>
  .page-contact {
    max-width: 700px;
    margin: 0 auto;
  }
  .zoho-contact-form label {
    display: block;
    text-align: left;
    margin-top: 15px;
    font-weight: 500;
  }
  .zoho-contact-form__name-container {
    display: flex;
    flex-direction: column;
  }
  .zoho-contact-form button {
    margin-top: 20px;
    padding: 10px 30px;
    border-radius: 6px;
    background: #02827B ;
/*     border: 2px solid #2a2725; */
  }
  .zoho-contact-form button em {
    font-style: normal;
  }
  @media screen and (min-width: 900px) {
    .zoho-contact-form__name-container {
      flex-direction: row;
      justify-content: space-between;
    }
    .zoho-contact-form__name-container > div {
      width: 49%;
    }
  }
</style>

<div class="module-wrapper">
  <div class="module page">
      <div class="module-body page-contact rte clearfix">
        <!-- Change or deletion of the name attributes in the input tag will lead to empty values on record submission-->
        <form class="zoho-contact-form" action='https://forms.zohopublic.com/pledgeresourcemanagersincdbara/form/ContactForm/formperma/leNLtb_ugpi5eIeWhniodKp9a6BEq8hJld7HPwfvqdI/htmlRecords/submit' name='form' id='form' method='POST' accept-charset='UTF-8' enctype='multipart/form-data'>
          <input type="hidden" name="zf_referrer_name" value=""><!-- To Track referrals , place the referrer name within the " " in the above hidden input field -->
          <input type="hidden" name="zf_redirect_url" value=""><!-- To redirect to a specific page after record submission , place the respective url within the " " in the above hidden input field -->
          <input type="hidden" name="zc_gad" value=""><!-- If GCLID is enabled in Zoho CRM Integration, click details of AdWords Ads will be pushed to Zoho CRM -->
          <h2>Contact Us</h2>
          <!--Name-->
          <div class="zoho-contact-form__name-container">
            <div>
              <label class="label-half">First Name</label>
              <input type="text" maxlength="255" name="Name_First" fieldType=7 placeholder="" />
            </div>
            <div>
              <label class="label-half">Last Name</label>
              <input type="text" maxlength="255" name="Name_Last" fieldType=7 placeholder="" />
            </div>
          </div>
          <!--Email-->
          <label>Email</label>
          <input type="text" maxlength="255" name="Email" value="" fieldType=9 placeholder="" />
          <!--Multi Line-->
          <label>Message</label>
          <textarea name="MultiLine" maxlength="65535" placeholder="" ></textarea>
          <button type="submit"><em>SUBMIT</em></button></form>
      </div>
  </div>
</div>

{% comment %}
{% section 'module-contact-form' %}

{% section 'module-map' %}
{% endcomment %}

