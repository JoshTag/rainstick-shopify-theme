<style>
  .popup-container {
    position: fixed;
    top: 50px;
    right: 10px;
    width: 300px;
    height: 150px;
    border: 2px solid #2A2725;
    background-color: #F8F6F6;
    border-radius: 6px;
    padding: 1rem;
    z-index: 10000;
    visibility: hidden;
    transform: translateY(0);
    opacity: 0;
    transition: .8s;
  }
  .popup-container.active {
    opacity: 1;
    transform: translateY(30px);
    visibility: visible; 
  }
  #pop-up-message {
    padding: 0 25px 0 0;
    margin-bottom: 2rem;
    font-weight: 400;
  }
  .pop-up__checkout {
    margin: 0;
  }
  #add-to-cart-pop-up__close {
    top: 1rem;
    right: 1rem;
    height: 20px;
    width: 20px;
    border-radius: 5px;
    position: absolute;
  }
  #add-to-cart-pop-up__close:after {
    position: absolute;
    top: 0px;
    bottom: 0;
    left: 1px;
    content: "\d7";
    font-size: 28px;
    color: #2A2725;
    line-height: 25px;
    text-align: center;
  }
  #add-to-cart-pop-up__close:hover {
    cursor: pointer;
  }
  @media screen and (min-width: 721px) {
    .popup-container {
      top: 100px;
    }
  }
</style>

<div id="add-to-cart-pop-up" class="popup-container">
  <div id="add-to-cart-pop-up__close"></div>
  <p id="pop-up-message">Rainstick shower has been added to cart</p>
  <a class="pop-up__checkout button__teal" href="/cart">Checkout</a>
</div>
