<style>
  .howitworks__ctn-1 {
    display: flex;
    background:#F7EDE2;
    justify-content: center;
    padding: 1rem 3rem 2rem 3rem;
    max-width: 1100px;
    flex-wrap: wrap;
    margin: 0 auto;
  }

  @media screen and (max-width: 425px){
    .howitworks__ctn-1 {
      padding: 0rem;
    }}

  .howitworks__ctn-last {
    display: flex;
    justify-content: center;
    padding: 1rem 3rem 2rem 3rem;
    max-width: 1100px;
    flex-wrap: wrap;
    margin: 0 auto;
  }

  @media screen and (max-width: 425px){
    .howitworks__ctn-last {
      padding: 0rem;
    }}

  .howitworks__img-ctn-1 {
    width: 44%;
    border-radius: 8px;
    margin-right: 2rem;
  }

  @media screen and (max-width: 943px){
    .howitworks__img-ctn-1 {
      flex-wrap: wrap;
      width: 100%;
      padding: 0px;
      margin-top: 2rem;
      margin: 0rem;
      flex-direction: column-reverse;
    }}

  @media screen and (max-width: 425px){
    .howitworks__img-ctn-1 {
      border-radius: 0px;
    }} 

  .howitworks__img-ctn-4 {
    width: 44%;
    border-radius: 8px;
    margin-right: 2rem;
  }

  @media screen and (max-width: 943px){
    .howitworks__img-ctn-4 {
      height: 800px;
      flex-wrap: wrap;
      width: 100%;
      padding: 0px;
      margin-top: 2rem;
      margin: 0rem;
      flex-direction: column-reverse;
    }}

  @media screen and (max-width: 425px){
    .howitworks__img-ctn-4 {
      border-radius: 0px;
    }}

  .howitworks__img {
    background-image: url({{ 'aboutus-img-1.jpg' | asset_url }});
    height: 365px;
    border-radius: 8px;
    background-size: cover;
    background-position: center;
  }

  @media screen and (max-width: 425px){
    .howitworks__img{
      border-radius: 0px;
      margin-bottom: 1.5rem;
    }}


  .howitworks__list{
    margin-right: 1rem;
    margin-left: 2rem;
    width: 70%;
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .howitworks__img-4 {
    background-image: url({{ 'howitworks-4.jpg' | asset_url }});
    height: 100%;
    border-radius: 8px;
    background-size: cover;
    background-position: left;
  }

  @media screen and (max-width: 425px){
    .howitworks__img-4{
      border-radius: 0px;
      margin-bottom: 1.5rem;
    }}

  .howitworks__ctn-inner {
    width: 40%;
    margin-right: 1rem;
    display: flex;
    flex-direction: column;
  }

  @media screen and (max-width: 943px){
    .howitworks__ctn-inner {
      width: 100%;
      padding: 1rem;
      margin-right: 0;
      padding-top: 2rem;
    }}

  .howitworks__text-1{
    color: #121212;
    font-size: 12pt;
  }


  @media screen and (max-width: 720px){
    .howitworks__text-1{
      text-align: center;
    }
  }

  .howitworks__text-4{
    color: #121212;
    font-size: 12pt;
    padding-bottom: 0rem;
    padding-top 0rem;
  }


  @media screen and (max-width: 720px){
    .howitworks__text-4{
      text-align: center;
    }
  }

  .howitworks__video-ctn-outer {
    display: flex;
    justify-content: center;
  }

  .howitworks__video-ctn-inner {
    background: #121212;
    border-radius: 8pt;
    width: 80%;
    max-width: 900px;
    margin: 7rem 1rem 8rem 1rem;
    z-index: 1;
  }

  .howitworks__text-2{
    color: #F7EDE2;
    font-size: 12pt;
    position: relative;
  }

  .howitworks__ctn-inner-2 {
    width: 30%;
    margin-right: 1rem;
    display: flex;
    flex-direction: column;
  }

  @media screen and (max-width: 943px){
    .howitworks__ctn-inner-2 {
      width: 100%;
      padding: 1rem;
      margin-right: 0rem;
    }}

  .howitworks__img-2 {
    background-repeat: no-repeat;
    background-size: cover;
    background-position: 55% 0;
    height: 600px;
    border-radius: 8px;
    position: relative;
  }

  @media screen and (max-width: 425px){
    .howitworks__img-2 {
      border-radius: 0px;
    }}

  .howitworks__text-3{
    color: #F4F2F1;
    font-size: 14pt;
  }

  .howitworks__vs-buttons-ctn {
    margin: 30px 0;
    display:flex;
  }

  @media screen and (max-width: 1024px){
    .howitworks__vs-buttons-ctn{
      justify-content: center;
      width: 100%;
    }}

  .howitworks__vs-buttons{
    display: flex;
    flex-wrap: nowrap;
    justify-content: center;
    border-radius: 8px;
    width: 100%;
    height: 64px;
    position: relative;
    border:1px solid #F7EDE2; 
  }

  .howitworks__vs-button:first-of-type:before {
    content: "";
    position: absolute;
    width: calc(100% - 9px);
    margin: 5px 5px;
    height: 51px;
    border-radius: 6px;
    left: 100%;
    top: 0;
    background-color: #02827B;
    z-index: -1;
    transition: .5s;
  }
  
  .howitworks__vs-button.active:first-of-type:before {
    left: 0%;
  }
  
  .howitworks__vs-button.active {
    color: #F7EDE2;
  }

  .howitworks__vs-button{
    background: transparent;
    width: 50%;
    height: 100%;
    border-radius: 6px 0px 0px 6px;
    border: none;
    position: relative;
    color: #F7EDE2;
    font-weight: 500;
    text-align: center;
    z-index: 10;
    transition: .5s;
  }

  @media screen and (max-width: 1024px){
    .howitworks__vs-button-1{
      width: 100%;
    }}

  .howitworks__vs-button-2{
    background: #F4F2F1;
    width: 50%;
    border-radius: 0px 6px 6px 0px;
  }

  @media screen and (max-width: 1024px){
    .howitworks__vs-button-2{
      width: 100%;
    }}

  .howitworks__list-item::marker {
    margin-right: 1rem;
  }
  #circular-overlay,
  #traditional-overlay{
    content: "";
    position: absolute;
    height: 80%;
    width: 50%;
    top: 12%;
    background-position: center;
    background-repeat: no-repeat;
    background-size: contain;
    transform: translateX(50%);
    opacity: 0;
    transition: opacity 0.5s;
  }
  #circular-overlay.active,
  #traditional-overlay.active{
    opacity: 1;
  }
  #circular-overlay {
    right: 38%;
  }
  #traditional-overlay {
    right: 32%;
  }
  #image-compare-text--one {
    opacity: 0; 
    top: 0;
  }
  #image-compare-text--two {
    opacity: 0; 
    top: 0;
    position: absolute;
  }
  #image-compare-text--one.active,
  #image-compare-text--two.active{
    transform: translateY(-10px);
    opacity: 1;
    transition: 0.5s; 
  }
  .image-compare-text--flowrate {
    padding: 5px 0;
    font-size: 17px;
    font-weight: 400;
  }
  .image-compare-text--large-text {
    padding: 5px 0;
    font-size: 41px;
    font-weight: 500;
    color: #F7EDE2;
  }
  .image-compare-text--mode {
    padding: 0; 
    font-weight: 500;
    font-size: 18px;
    color: #F7EDE2;
  }
  .image-compare-text--text {
    font-weight: 400;
        color: #F7EDE2;
  }
</style>

<div class="background__grey">
   <div class="howitworks__ctn-2">
    <div class="howitworks__img-ctn-1">
      {% style %}
        #circular-overlay { background-image: url({{ 'circular.svg' | asset_url }});}
        #traditional-overlay { background-image: url({{ 'traditional.svg' | asset_url }});}
      {% endstyle%}
      <div id="image-compare-overlay" class="howitworks__img-2 image-circular" style="background-image: url({{ 'RS-diagram.jpg' | asset_url }})">
        <div id="circular-overlay" class="active"></div>
        <div id="traditional-overlay"></div>
      </div>
    </div>
    <div class="howitworks__ctn-inner">
      <h3 class="mainheading_white-thin-large">{{ section.settings.section_title }}</h3>
<!--       <p class="howitworks__text-3 margin-top-4">
        See the difference!
      </p> -->
      <div class="howitworks__vs-buttons-ctn">
        <div class="howitworks__vs-buttons">
          <button class="howitworks__vs-button button-toggle--left active">
            CIRCULAR
          </button>
          <button class="howitworks__vs-button button-toggle--right">
            TRADITIONAL
          </button>
        </div>
      </div>
      <div id="image-compare-text" class="howitworks__text-2">
        <div id="image-compare-text--one" class="active"> 
          <p class="image-compare-text--flowrate">Flowrate:</p>
          <p class="image-compare-text--large-text">{{ section.settings.gpmone }}</p>
          <p class="image-compare-text--mode">{{ section.settings.modeone }}</p>
          <p class="image-compare-text--text">
            {{ section.settings.contentone }}
          </p>
        </div>
        <div id="image-compare-text--two">
          <p class="image-compare-text--flowrate">Flowrate:</p>
          <p class="image-compare-text--large-text">{{ section.settings.gpmtwo }}</p>
          <p class="image-compare-text--mode">{{ section.settings.modetwo }}</p>
          <p class="image-compare-text--text">
            {{ section.settings.contenttwo }}
          </p>
        </div>
      </div>
    </div>
   </div> 
</div>

{% schema %}
  {
    "name": "Image compare",
    "settings": [
	  {
		"type": "text",
		"id": "section_title",
		"label": "Title"
	  },
	  {
		"type": "text",
		"id": "gpmone",
		"label": "GPM"
	  },
	  {
		"type": "text",
		"id": "modeone",
		"label": "Mode"
	  },
	  {
		"type": "textarea",
		"id": "contentone",
		"label": "Content"
	  },
	  {
		"type": "text",
		"id": "gpmtwo",
		"label": "GPM"
	  },
	  {
		"type": "text",
		"id": "modetwo",
		"label": "Mode"
	  },
	  {
		"type": "textarea",
		"id": "contenttwo",
		"label": "Content"
	  }
	]
  }
{% endschema %}