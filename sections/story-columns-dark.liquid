<div class="background__grey padding-bottom-3 padding-top-4">
    <p class="blog__heading-white">{{ section.settings.title }}</p>
  <div class="blog__3-pillar-section">

    <div class="blog__pillar-ctn">
      <a href="{{ section.settings.blog_one.url }}">
        <div class="blog__3part-img" style="background-image: url({{ section.settings.blog_one.image.src | img_url: '1080x1080' }})"></div>
        <h3 class="blog__heading-title-white">{{ section.settings.blog_one.title }}</h3>
      </a>
      <p class="blog__body-text-white">
        {{ section.settings.blog_one.excerpt }}
      </p>
      <a href="{{ section.settings.blog_one.url }}" class="blog__read-more-white">(read more)</a>
    </div>

    <div class="blog__pillar-ctn">
      <a href="{{ section.settings.blog_two.url }}">
        <div class="blog__3part-img" style="background-image: url({{ section.settings.blog_two.image.src | img_url: '1080x1080' }})"></div>
        <h3 class="blog__heading-title-white">{{ section.settings.blog_two.title }}</h3>
      </a>
      <p class="blog__body-text-white">
        {{ section.settings.blog_two.excerpt }}
      </p>
      <a href="{{ section.settings.blog_two.url }}" class="blog__read-more-white">(read more)</a>
    </div>

    <div class="blog__pillar-ctn">
      <a href="{{ section.settings.blog_three.url }}">
        <div class="blog__3part-img" style="background-image: url({{ section.settings.blog_three.image.src | img_url: '1080x1080' }})"></div>
        <h3 class="blog__heading-title-white">{{ section.settings.blog_three.title }}</h3>
      </a>
      <p class="blog__body-text-white">
        {{ section.settings.blog_three.excerpt }}
      </p>
      <a href="{{ section.settings.blog_three.url }}" class="blog__read-more-white">(read more)</a>
    </div>

  </div>
</div>

<div class="button__ctn-black-stories-page">
    <a href="{{ section.settings.url }}" class="button__standard button__standard--hover">
      See More
    </a>
</div>

{% schema %}
  {
    "name": "Story columns dark",
    "settings": [
	  {
        "id": "title",
		"type": "text",
		"label": "Title"
      },
	  {
        "id": "blog_one",
		"type": "article",
		"label": "Article One"
      },
	  {
        "id": "blog_two",
		"type": "article",
		"label": "Article Two"
      },
	  {
        "id": "blog_three",
		"type": "article",
		"label": "Article Three"
      },
	  {
        "id": "url",
		"type": "url",
		"label": "Link"
      }
	],
    "presets": [
      {
      "name": "Story columns dark"
      }
    ]
  }
{% endschema %}
